<image src=<%= @article.image %> />

<h1>
  <%= @article.title %>
</h1>

<p>
  <%= @article.text %>
</p>

<% if @article.comments.length == 0 %>
  <div></div>
<% else %>
  <h4>Comments</h4>
  <%= render @article.comments %>
<% end %>

<h5>Add a comment:</h5>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>