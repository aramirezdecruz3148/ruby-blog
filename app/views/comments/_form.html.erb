<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  
  <p>
    <%= form.text_field :commenter, placeholder: 'Name', class: 'input' %>
  </p>

  <p>
    <%= form.text_area :body, placeholder: 'Comment', class: 'field' %>
  </p>
  
  <p>
    <%= form.submit 'Post', :class=> 'button' %>
  </p>

<% end %>